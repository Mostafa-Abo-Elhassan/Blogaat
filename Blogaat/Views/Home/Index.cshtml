@model Blogaat.Models.ViewModels.HomeTagsVM
  @{
 ViewData["Title"] = "Home Page";
}
   

<!-- Hero Section -->
<!-- Hero Section -->
<section class="hero-section bg-light py-5 my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
                <h1 class="display-4">Welcome to Blogaat</h1>
                <p class="lead text-left">
                    Blogaat is a vibrant platform for sharing insightful articles and creative ideas. It fosters a community where writers and readers can exchange knowledge and inspire one another. With a focus on engagement, it provides a welcoming space for diverse voices. Join us in exploring new perspectives and creative expressions!



                </p>
                
            </div>
            <div class="col-md-6 text-center text-md-end">
                <img src="https://images.pexels.com/photos/3194523/pexels-photo-3194523.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Blog Image" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>
 @if (Model != null && Model.tag.Any())
{
    <p class="container">
        @foreach (var tag in Model.tag)
        {
            <span class="badge bg-secondary me-1 text-center">
                @tag.Name
            </span>
        }
    </p>

}


<section class="bg-light py-5" >
    <div class="container">
        <!-- Section Heading -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark fw-bold">Recent Posts</h1>

        </div>

        <!-- Section Divider -->
        <hr class="my-4">

        @if (Model != null && Model.blog.Any())
        {
            <!-- Post Grid -->
            <div class="row" >
                @foreach (var Blogaat in Model.blog)
                {
                    <!-- Post Item -->
                    <div class="col-md-4 mb-4 p-3">
                        <div class="card h-100">
                            <img src=@Blogaat.FeateredImageUrl alt="@Blogaat.Heading" class="img-fluid mb-4">
                            <div class="card-body">

                                @* <span class="badge bg-primary mb-2">@Blogaat.tags</span> *@
                                <h5 class="card-title">@Blogaat.PageTitle</h5>
                                <p>
                                    <div>
                                        <small class="text-muted">Author : <small class="text-red">@Blogaat.Author</small></small><br>
                                        <small class="text-muted">Published Date : @Blogaat.PublishedDate.ToString("MMMM dd, yyyy")</small>
                                    </div>
                                </p>
                                <p>
                                    @foreach (var tag in Blogaat.tags)
                                    {
                                        <span class="badge bg-secondary me-1">
                                            @tag.Name
                                        </span>
                                    }
                                </p>
                                <p class="card-text">@Blogaat.ShortDescription</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">

                                <a class="btn btn-dark"
                                   asp-area="" asp-action="Index"
                                   asp-controller="Blogs"
                                   asp-route-Id="@Blogaat.Id">
                                    Read More
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No recent posts available.</p>
        }
    </div>
</section>

 